<?xml version="1.0" encoding="utf-8"?>
<!-- Make View Scrollable -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Relative Layout that contains every component -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            tools:srcCompat="@tools:sample/avatars" />
        <!-- Username -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/ivProfilePicture"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:hint="Username" />
        <!-- Three Dots -->
        <ImageView
            android:id="@+id/ivThreeDots"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="22dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ufi_more" />
        <!-- Post Image -->
        <ImageView
            android:id="@+id/ivPostImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="500dp"
            android:layout_below="@id/ivProfilePicture"
            tools:srcCompat="@tools:sample/avatars" />
        <!-- Like -->
        <ImageView
            android:id="@+id/ivLike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/ivPostImage"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/ufi_heart_icon" />
        <!-- Comment -->
        <ImageView
            android:id="@+id/ivComment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/ivLike"
            android:layout_marginStart="30dp"
            android:layout_below="@id/ivPostImage"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ufi_comment" />
        <!-- Share -->
        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/ivPostImage"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivComment"
            app:srcCompat="@drawable/ufi_new_direct" />
        <!-- Save -->
        <ImageView
            android:id="@+id/ivSave"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/ivPostImage"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            app:srcCompat="@drawable/ufi_save_icon" />
        <!-- Number of likes -->
        <TextView
            android:id="@+id/tvLikeCounter"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLike"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:hint="10 likes"
            android:maxLines="1"
            android:textStyle="bold" />
        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvLikeCounter"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:hint="Description goes here!" />
        <!-- Profile Picture to Comment -->
        <ImageView
            android:id="@+id/ivProfilePictureComment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvDescription"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            tools:srcCompat="@tools:sample/avatars" />
        <!-- Comment TV "button" -->
        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/ivProfilePictureComment"
            android:layout_marginStart="5dp"
            android:hint="Add a comment..."/>
        <!-- Time Ago -->
        <TextView
            android:id="@+id/tvTimeAgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@+id/ivProfilePictureComment"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:hint="1 day ago"/>
    </RelativeLayout>
</ScrollView>